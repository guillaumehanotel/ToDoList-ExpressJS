<% extend('../layout') %>

<main>

    <h1 class="text-center">Todos</h1>

    <div class="table-wrapper">

        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Manage <b>Todos</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="/todos/add" class="btn btn-success"><i class="material-icons">&#xE147;</i>
                        <span>Add New Todo</span>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th></th>
                <th>User</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% for (todo of todos) { %>
            <tr id="todo-<%= todo.id %>">
                <td>
                    <div class="form-check">
                        <% if(todo.completedAt) { %>
                        <input class="form-check-input checkTodo" type="checkbox" value=""  disabled checked>
                        <% } else { %>
                        <input class="form-check-input checkTodo" type="checkbox" value="">
                        <% } %>
                    </div>
                </td>
                <td data-userId="<%= todo.userId %>"><%= locals.user.pseudo %></td>
                <td><%= todo.message %></td>

                <td>
                    <a href="/todos/<%= todo.id %>/edit" class="edit">
                        <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                    </a>
                    <a href="#"  class="delete deleteTodo" data-todo_id=<%= todo.id %>>
                        <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                    </a>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</main>