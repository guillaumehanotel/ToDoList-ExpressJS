<% extend('../layout') %>

<main>

    <h1 class="text-center">Users</h1>

    <div class="table-wrapper">

        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Manage <b>Users</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="/users/add" class="btn btn-success"><i class="material-icons">&#xE147;</i>
                        <span>Add New User</span>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% for (user of users) { %>
                <tr id="user-<%= user.id %>">
                    <td><%= user.pseudo %></td>
                    <td><%= user.email %></td>
                    <td><%= user.firstname %></td>
                    <td><%= user.lastname %></td>

                    <td>
                        <a href="/users/<%= user.id %>/edit" class="edit">
                            <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                        </a>
                        <a href="#" class="delete deleteUser" data-user_id=<%= user.id %>>
                            <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                        </a>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</main>